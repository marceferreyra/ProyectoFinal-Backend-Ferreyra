<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
</head>
<body>
    <h1>Reestablece tu contraseña</h1>
    <form action="/api/sessions/reset-password" method="POST" id="resetPasswordForm">
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="password">Nueva contraseña:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="confirmPassword">Confirma tu contraseña:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button type="submit">Enviar</button>
    </form>

    <script>
        window.onload = function() {
            checkTokenExpiration();
        };

        function checkTokenExpiration() {
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token');

            const now = new Date().getTime();

            const expirationTime = urlParams.get('expiration');

            if (expirationTime && now > parseInt(expirationTime)) {
               window.location.href = '/api/sessions/forgot-password';
            }
        }
    </script>
</body>
</html>
